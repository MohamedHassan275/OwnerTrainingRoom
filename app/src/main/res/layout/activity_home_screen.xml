<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.HomeScreenActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/training_courses"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show And Your Taining Rooms"
        android:textAllCaps="false"
        android:textColor="#181717"
        android:textSize="22dp"
        android:layout_marginTop="25dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/show_training_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:text="Show Training Room"
        android:textColor="#fffefe"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button_from"/>
    <Button
        android:id="@+id/add_training_room_HomeScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:text="Add Training Room"
        android:textColor="#fffefe"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button_from"/>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:textColor="#fffefe"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@drawable/button_from"/>

</LinearLayout>
