<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ede8e8"
    tools:context=".AddTrainingRooms.AddTrainingRoomsActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <ImageView
             android:layout_marginTop="10dp"
             android:id="@+id/imageView"
             android:layout_width="150dp"
             android:layout_height="100dp"/>
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:layout_marginTop="10dp"
                     android:id="@+id/imageView2"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_gravity="center"
                     android:src="@drawable/camera"/>
                 <ImageView
                     android:layout_marginTop="10dp"
                     android:id="@+id/imageView3"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_gravity="center"
                     android:src="@drawable/camera"/>
                 <ImageView
                     android:layout_marginTop="10dp"
                     android:id="@+id/imageView4"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_gravity="center"
                     android:src="@drawable/camera"/>
                 <ImageView
                     android:layout_marginTop="10dp"
                     android:id="@+id/imageView5"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_gravity="center"
                     android:src="@drawable/camera"/>

             </LinearLayout>

         </LinearLayout>

          <android.support.design.widget.TextInputLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <EditText
                  android:id="@+id/name"
                  android:layout_width="match_parent"
                  android:layout_height="35dp"
                  android:background="@drawable/edit_textdesign"
                  android:hint="Name"
                  android:padding="7dp"
                  android:inputType="text"
                  android:maxLines="1"
                  android:paddingLeft="10dp"
                  android:singleLine="true"
                  android:textSize="15sp" />

          </android.support.design.widget.TextInputLayout>

          <android.support.design.widget.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <EditText
                  android:id="@+id/government"
                  android:layout_width="match_parent"
                  android:layout_height="35dp"
                  android:background="@drawable/edit_textdesign"
                  android:hint="Government"
                  android:textSize="15sp"
                  android:padding="7dp"
                  android:paddingLeft="10dp"
                  android:inputType="text"
                  android:maxLines="1"
                  android:singleLine="true"/>

          </android.support.design.widget.TextInputLayout>
          <android.support.design.widget.TextInputLayout
              android:layout_marginTop="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <EditText
                  android:id="@+id/city"
                  android:layout_width="match_parent"
                  android:layout_height="35dp"
                  android:background="@drawable/edit_textdesign"
                  android:hint="City"
                  android:padding="7dp"
                  android:textSize="15sp"
                  android:inputType="text"
                  android:maxLines="1"
                  android:paddingLeft="10dp"
                  android:singleLine="true"/>

          </android.support.design.widget.TextInputLayout>
          <android.support.design.widget.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <EditText
                  android:id="@+id/mobile"
                  android:layout_width="match_parent"
                  android:layout_height="35dp"
                  android:background="@drawable/edit_textdesign"
                  android:hint="mobile Number"
                  android:textSize="15sp"
                  android:padding="7dp"
                  android:inputType="number"
                  android:paddingLeft="10dp"
                  android:maxLines="1"
                  android:singleLine="true"/>

          </android.support.design.widget.TextInputLayout>

          <MultiAutoCompleteTextView
              android:id="@+id/details"
              android:layout_width="match_parent"
              android:layout_height="35dp"
              android:hint="Details"
              android:layout_marginTop="10dp"
              android:padding="7dp"
              android:background="@drawable/edit_textdesign"
              android:singleLine="true"/>
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Time Of Work "
                  android:textColor="#000"
                  android:textSize="17sp"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="center"/>

              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <LinearLayout
                      android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="From"
                          android:layout_marginLeft="15sp"
                          android:textColor="#000"
                          android:layout_gravity="center"
                          android:textSize="15sp"/>
                      <android.support.design.widget.TextInputLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <EditText
                              android:id="@+id/from"
                              android:layout_width="match_parent"
                              android:layout_height="35dp"
                              android:background="@drawable/edit_textdesign"
                              android:hint="From"
                              android:padding="7dp"
                              android:paddingLeft="10dp"
                              android:layout_marginRight="25dp"
                              android:layout_marginLeft="25dp"
                              android:textSize="15sp"
                              android:inputType="number"
                              android:maxLines="1"
                              android:singleLine="true"/>

                      </android.support.design.widget.TextInputLayout>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="To"
                          android:layout_marginLeft="15sp"
                          android:textColor="#000"
                          android:textSize="15sp"
                          android:layout_gravity="center"/>
                      <android.support.design.widget.TextInputLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <EditText
                              android:id="@+id/to"
                              android:layout_width="match_parent"
                              android:layout_height="35dp"
                              android:background="@drawable/edit_textdesign"
                              android:hint="To"
                              android:padding="7dp"
                              android:paddingLeft="10dp"
                              android:layout_marginRight="25dp"
                              android:layout_marginLeft="25dp"
                              android:textSize="15sp"
                              android:inputType="number"
                              android:maxLines="1"
                              android:singleLine="true"/>

                      </android.support.design.widget.TextInputLayout>
                  </LinearLayout>
              </LinearLayout>
          </LinearLayout>

          <Button
              android:id="@+id/add_rooms"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="85dp"
              android:layout_marginRight="85dp"
              android:layout_marginTop="10dp"
              android:text="Add Rooms"
              android:textColor="#494444"
              android:textAllCaps="false"
              android:textSize="12sp"
              android:background="@drawable/edit_textdesign"/>
          <Button
              android:id="@+id/add_training_room_AddRooms"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50dp"
              android:layout_marginRight="50dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:text="Add Training Room"
              android:textColor="#494444"
              android:textAllCaps="false"
              android:textSize="12sp"
              android:background="@drawable/edit_textdesign"/>
      </LinearLayout>

  </ScrollView>
</LinearLayout>
